rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user has gosat role from PROTECTED collection
    // This collection can only be written by existing gosats/admins
    function isGosat() {
      return isAuthenticated() 
        && exists(/databases/$(database)/documents/user_roles/$(request.auth.uid))
        && get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'gosat';
    }
    
    // ============================================
    // PROTECTED USER ROLES (Admin-only writes)
    // ============================================
    // Path: user_roles/{userId}
    // This collection stores verified roles that ONLY admins/gosats can modify
    match /user_roles/{userId} {
      // Anyone can read (for role verification)
      allow read: if true;
      
      // Only existing gosats can create/update/delete roles
      // This prevents self-assignment of gosat role
      allow write: if isGosat();
    }
    
    // ============================================
    // PRIVATE JOURNAL ENTRIES
    // ============================================
    // Path: journal/{userId}/entries/{yhwhDate}
    match /journal/{userId}/entries/{entryId} {
      allow read, write: if isOwner(userId);
    }
    
    // ============================================
    // PUBLIC REMNANT WALL
    // ============================================
    // Path: remnant_wall/{postId}
    match /remnant_wall/{postId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can create posts
      // Must be the author
      allow create: if isAuthenticated() 
        && request.resource.data.authorUID == request.auth.uid;
      
      // Only author can update or delete
      allow update, delete: if isAuthenticated() 
        && resource.data.authorUID == request.auth.uid;
    }
    
    // ============================================
    // TORAH GROUPS
    // ============================================
    // Path: torah_groups/{groupId}
    match /torah_groups/{groupId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can write
      allow write: if isAuthenticated();
    }
    
    // ============================================
    // LIVE TEQUVAH PHOTOS
    // ============================================
    // Path: live_tequvah_{year}/{photoId}
    // Note: Dynamic year collections (e.g., live_tequvah_2025, live_tequvah_2026)
    match /{year}/live_tequvah_{year}/{photoId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can create
      allow create: if isAuthenticated();
      
      // Only author can update or delete
      allow update, delete: if isAuthenticated() 
        && resource.data.authorUID == request.auth.uid;
    }
    
    // ============================================
    // USER PROFILES (Public data only)
    // ============================================
    // Path: users/{userId}
    // NOTE: role/isGosat fields here are NOT used for authorization
    // Use user_roles collection for role-based access
    match /users/{userId} {
      // Anyone can read (for display names, countries, etc.)
      allow read: if true;
      
      // Only owner can write their profile
      // SECURITY: Users cannot set role/isGosat fields (use user_roles instead)
      allow write: if isOwner(userId)
        && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role)
        && (!('isGosat' in request.resource.data) || request.resource.data.isGosat == resource.data.isGosat);
    }
    
    // ============================================
    // COMMUNITY CHAT
    // ============================================
    // Path: community_chat/{messageId}
    match /community_chat/{messageId} {
      // Anyone can read (public community chat)
      allow read: if true;
      
      // Only authenticated users can create messages
      // Must be the author
      allow create: if isAuthenticated() 
        && request.resource.data.authorUID == request.auth.uid
        && request.resource.data.authorUID != null
        && request.resource.data.createdAt != null;
      
      // Only author can update their own messages
      // Gosats can also update (for moderation) - uses PROTECTED user_roles collection
      allow update: if isAuthenticated() 
        && (resource.data.authorUID == request.auth.uid || isGosat());
      
      // Only author or Gosat can delete - uses PROTECTED user_roles collection
      allow delete: if isAuthenticated() 
        && (resource.data.authorUID == request.auth.uid || isGosat());
    }
    
    // ============================================
    // BANNED USERS
    // ============================================
    // Path: banned_users/{userId}
    match /banned_users/{userId} {
      // Only Gosats can read/write - uses PROTECTED user_roles collection
      allow read, write: if isGosat();
    }
  }
}

