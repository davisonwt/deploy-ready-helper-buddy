rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // PRIVATE JOURNAL ENTRIES
    // ============================================
    // Path: journal/{userId}/entries/{yhwhDate}
    match /journal/{userId}/entries/{entryId} {
      allow read, write: if isOwner(userId);
    }
    
    // ============================================
    // PUBLIC REMNANT WALL
    // ============================================
    // Path: remnant_wall/{postId}
    match /remnant_wall/{postId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can create posts
      // Must be the author
      allow create: if isAuthenticated() 
        && request.resource.data.authorUID == request.auth.uid;
      
      // Only author can update or delete
      allow update, delete: if isAuthenticated() 
        && resource.data.authorUID == request.auth.uid;
    }
    
    // ============================================
    // TORAH GROUPS
    // ============================================
    // Path: torah_groups/{groupId}
    match /torah_groups/{groupId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can write
      allow write: if isAuthenticated();
    }
    
    // ============================================
    // LIVE TEQUVAH PHOTOS
    // ============================================
    // Path: live_tequvah_{year}/{photoId}
    // Note: Dynamic year collections (e.g., live_tequvah_2025, live_tequvah_2026)
    match /{year}/live_tequvah_{year}/{photoId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can create
      allow create: if isAuthenticated();
      
      // Only author can update or delete
      allow update, delete: if isAuthenticated() 
        && resource.data.authorUID == request.auth.uid;
    }
    
    // ============================================
    // USER PROFILES
    // ============================================
    // Path: users/{userId}
    match /users/{userId} {
      // Anyone can read (for display names, countries, etc.)
      allow read: if true;
      
      // Only owner can write
      allow write: if isOwner(userId);
    }
    
    // ============================================
    // COMMUNITY CHAT
    // ============================================
    // Path: community_chat/{messageId}
    match /community_chat/{messageId} {
      // Anyone can read (public community chat)
      allow read: if true;
      
      // Only authenticated users can create messages
      // Must be the author
      allow create: if isAuthenticated() 
        && request.resource.data.authorUID == request.auth.uid
        && request.resource.data.authorUID != null
        && request.resource.data.createdAt != null;
      
      // Only author can update their own messages
      // Gosats can also update (for moderation)
      allow update: if isAuthenticated() 
        && (resource.data.authorUID == request.auth.uid 
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'gosat'
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isGosat == true);
      
      // Only author or Gosat can delete
      allow delete: if isAuthenticated() 
        && (resource.data.authorUID == request.auth.uid 
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'gosat'
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isGosat == true);
    }
    
    // ============================================
    // BANNED USERS
    // ============================================
    // Path: banned_users/{userId}
    match /banned_users/{userId} {
      // Only Gosats can read/write
      allow read, write: if isAuthenticated() 
        && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'gosat'
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isGosat == true);
    }
  }
}

