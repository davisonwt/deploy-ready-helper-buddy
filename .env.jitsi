# Security
#
# Set strong passwords for internal accounts
# IMPORTANT: Generate these using: openssl rand -hex 16
#

# JICOFO component secret
JICOFO_COMPONENT_SECRET=

# JICOFO authentication password
JICOFO_AUTH_PASSWORD=

# JVB authentication password  
JVB_AUTH_PASSWORD=

# Jigasi XMPP password
JIGASI_XMPP_PASSWORD=

# Jibri recorder password
JIBRI_RECORDER_PASSWORD=

# Jibri XMPP password
JIBRI_XMPP_PASSWORD=


# System
#

# Directory for config
CONFIG=~/.jitsi-meet-cfg

# Restart policy
RESTART_POLICY=unless-stopped

# Timezone
TZ=UTC


# Basic configuration
#

# Public URL of your Jitsi Meet instance (REQUIRED)
PUBLIC_URL=https://meet.yourdomain.com

# IP address of the Docker host (auto-detected, usually no need to change)
#DOCKER_HOST_ADDRESS=

# XMPP domain for the XMPP server
XMPP_DOMAIN=meet.jitsi

# XMPP server (internal)
XMPP_SERVER=xmpp.meet.jitsi

# XMPP domain for authenticated users
XMPP_AUTH_DOMAIN=auth.meet.jitsi

# XMPP domain for guest users
XMPP_GUEST_DOMAIN=guest.meet.jitsi

# XMPP domain for MUC (Multi-User Chat)
XMPP_MUC_DOMAIN=muc.meet.jitsi

# XMPP internal MUC domain
XMPP_INTERNAL_MUC_DOMAIN=internal-muc.meet.jitsi

# XMPP domain for recorder
XMPP_RECORDER_DOMAIN=recorder.meet.jitsi

# XMPP base URL
XMPP_BOSH_URL_BASE=http://xmpp.meet.jitsi:5280


# Authentication
#

# Enable authentication (0=disabled, 1=enabled)
# When disabled, anyone can create rooms
ENABLE_AUTH=0

# Enable guest access (allows guests to join without authentication)
# Only relevant when ENABLE_AUTH=1
ENABLE_GUESTS=1

# Authentication type: internal, jwt or ldap
AUTH_TYPE=internal


# SSL Configuration
#

# Enable Let's Encrypt certificate generation
ENABLE_LETSENCRYPT=1

# Domain for Let's Encrypt certificate
LETSENCRYPT_DOMAIN=meet.yourdomain.com

# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=admin@yourdomain.com

# Use the staging Let's Encrypt server for testing (0=production, 1=staging)
#LETSENCRYPT_USE_STAGING=0

# Enable HTTP->HTTPS redirect
ENABLE_HTTP_REDIRECT=1

# Disable HTTPS (not recommended for production)
DISABLE_HTTPS=0


# Web interface ports
#

# HTTP port
HTTP_PORT=80

# HTTPS port
HTTPS_PORT=443


# JVB (Jitsi Videobridge) Configuration
#

# Media port for JVB (UDP)
JVB_PORT=10000

# TCP fallback port for media
JVB_TCP_PORT=4443
JVB_TCP_MAPPED_PORT=4443

# Disable TCP harvester (keep enabled for better NAT traversal)
JVB_TCP_HARVESTER_DISABLED=false

# STUN servers for NAT traversal
JVB_STUN_SERVERS=stun.l.google.com:19302,stun1.l.google.com:19302,stun2.l.google.com:19302

# Enable JVB APIs
JVB_ENABLE_APIS=rest,xmpp

# WebSocket settings
JVB_WS_DOMAIN=meet.yourdomain.com
JVB_WS_SERVER_ID=jvb1


# JICOFO Configuration
#

# Authentication user for JICOFO
JICOFO_AUTH_USER=focus

# Enable bridge health checks
JICOFO_ENABLE_BRIDGE_HEALTH_CHECKS=true


# JVB MUC settings
#

# JVB brewery MUC name
JVB_BREWERY_MUC=JvbBrewery


# Recording (Jibri)
#

# Enable recording (0=disabled, 1=enabled)
ENABLE_RECORDING=0

# Jibri brewery MUC
JIBRI_BREWERY_MUC=JibriBrewery

# Timeout for pending Jibri requests
JIBRI_PENDING_TIMEOUT=90

# XMPP user for Jibri
JIBRI_XMPP_USER=jibri

# XMPP recorder user
JIBRI_RECORDER_USER=recorder


# Advanced Features
#

# Enable transcriptions (requires Jigasi)
ENABLE_TRANSCRIPTIONS=0

# Enable lobby (waiting room before joining)
ENABLE_LOBBY=0

# Enable XMPP WebSocket
ENABLE_XMPP_WEBSOCKET=1

# Enable file sharing download
ENABLE_FILE_SHARING_DOWNLOAD=1

# Enable file sharing upload
ENABLE_FILE_SHARING_UPLOAD=1


# Etherpad integration (collaborative documents)
#

# Etherpad URL base (leave empty to disable)
#ETHERPAD_URL_BASE=


# Dropbox integration (for recordings)
#

# Dropbox app key
#DROPBOX_APPKEY=

# Dropbox redirect URI
#DROPBOX_REDIRECT_URI=


# TURN server configuration (for better NAT traversal)
#

# TURN server credentials (shared secret)
#TURN_CREDENTIALS=

# TURN server host
#TURN_HOST=turn.yourdomain.com

# TURN server port
#TURN_PORT=443

# TURNS (secure) server host
#TURNS_HOST=turn.yourdomain.com

# TURNS server port
#TURNS_PORT=5349


# Logging
#

# Log level: debug, info, warn, error
LOG_LEVEL=info


# JWT Authentication (optional - for advanced integrations)
#

# JWT application ID
#JWT_APP_ID=

# JWT application secret
#JWT_APP_SECRET=

# JWT accepted issuers
#JWT_ACCEPTED_ISSUERS=

# JWT accepted audiences
#JWT_ACCEPTED_AUDIENCES=

# JWT ASAP key server
#JWT_ASAP_KEYSERVER=

# Allow empty JWT
#JWT_ALLOW_EMPTY=

# JWT authentication type
#JWT_AUTH_TYPE=

# JWT token authentication module
#JWT_TOKEN_AUTH_MODULE=


# LDAP Authentication (optional)
#

# LDAP URL
#LDAP_URL=ldaps://ldap.domain.com/

# LDAP base DN
#LDAP_BASE=DC=example,DC=domain,DC=com

# LDAP bind DN
#LDAP_BINDDN=CN=binduser,OU=users,DC=example,DC=domain,DC=com

# LDAP bind password
#LDAP_BINDPW=

# LDAP filter
#LDAP_FILTER=(sAMAccountName=%u)

# LDAP authentication method
#LDAP_AUTH_METHOD=bind

# LDAP version
#LDAP_VERSION=3

# Use TLS
#LDAP_USE_TLS=1

# TLS ciphers
#LDAP_TLS_CIPHERS=SECURE256:SECURE128:!AES-128-CBC:!ARCFOUR-128:!CAMELLIA-128-CBC:!3DES-CBC:!CAMELLIA-128-CBC

# Check peer certificate
#LDAP_TLS_CHECK_PEER=1

# CA cert file
#LDAP_TLS_CACERT_FILE=/etc/ssl/certs/ca-certificates.crt

# CA cert directory
#LDAP_TLS_CACERT_DIR=/etc/ssl/certs

# Start TLS
#LDAP_START_TLS=0
